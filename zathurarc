set statusbar-h-padding 0
set statusbar-v-padding 0
set page-padding 1
set selection-clipboard clipboard
map D toggle_page_mode
map u scroll half-up
map d scroll half-down
map R reload
map r rotate
map K zoom in
map J zoom out
map i recolor
map p print

# make zathura tranceparant
set default-bg rgba(0,0,0,0.1)
set recolor true
set recolor-darkcolor "#dcdccc"
set recolor-lightcolor "1f1f1f"
set recolor-lightcolor rgba(0,0,0,0.5)

# hide statusbar
set guioptions none
